
<h1>Listing Attractions</h1>
<br></br>

<table>
  <tbody>
    <tr>
      <td style="padding:0 50px 0 70px;"><strong>Name</strong></td>
      <td style="padding:0 50px 0 70px;"><strong>Tickets</strong></td>
      <td style="padding:0 50px 0 70px;"><strong>Details</strong></td>
    </tr>
    <% @attractions.each do |attraction| %>
      <tr>
        <td style="padding:0 50px 0 70px;"><%= attraction.name%></td>
        <td style="padding:0 50px 0 90px;"><%= attraction.tickets %></td>
        <% if current_user.admin %>
          <td style="padding:0 50px 0 70px;"><%= link_to "Show #{attraction.name}", attraction_path(attraction) %></td>
        <% else %>
          <td style="padding:0 50px 0 70px;"><%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></td>
        <% end %>
      </tr>
    <% end %>
</tbody>
</table>
<br></br>

<% if @user %>
  <%= link_to "Back to profile", user_path(@user), {class: "btn btn-primary"} %>
<% else %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>
